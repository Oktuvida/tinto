# Tinto DIAN Billing App - Environment Variables
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control.

# PostgreSQL
POSTGRES_PASSWORD=tinto_dev_secret

# Jasypt encryption password (for encrypted application properties)
JASYPT_PASSWORD=dev_encryptor_key

# Tinto encryption password (for encrypting stored DIAN submissions)
TINTO_ENCRYPTION_PASSWORD=dev_encryption_key

# DIAN environment: habilitacion (testing) or produccion
DIAN_ENVIRONMENT=habilitacion

# DIAN software credentials (from DIAN portal)
DIAN_TECHNICAL_KEY=
DIAN_SOFTWARE_ID=
DIAN_SOFTWARE_PIN=

# DIAN certificate (mounted into /var/tinto/)
DIAN_CERTIFICATE_PATH=/var/tinto/certificate.p12
DIAN_CERTIFICATE_PASSWORD=
DIAN_CERTIFICATE_ALIAS=
